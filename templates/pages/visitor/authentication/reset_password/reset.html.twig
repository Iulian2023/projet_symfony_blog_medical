{% extends 'themes/base_visitor.html.twig' %}

{% block title %}- Nouveau mot de passe{% endblock %}

{% block main %}
    <main class="container">
            <h1 class="text-center display-5 my-5">Nouveau mot de passe</h1>
        <div class="row">
            <div class="col-md-7 mx-auto bg-primary-subtle shadow rounded p-5">
                {{ form_start(resetForm) }}
                    <div class="mb-3">
                        <label for="change_password_form_plainPassword_first" class="form-label">Nouveau mot de passe</label>
                        <div class="text-danger">
                            {{form_errors(resetForm.plainPassword.first)}}
                        </div>
                        {{form_widget(resetForm.plainPassword.first, {'attr' : {'class' : 'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="change_password_form_plainPassword_second" class="form-label">Confirmation du Nouveau mot de passe</label>
                        {{form_widget(resetForm.plainPassword.second, {'attr' : {'class' : 'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" value="Confirmer" class="btn btn-primary w-100">
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </main>
{% endblock %}
